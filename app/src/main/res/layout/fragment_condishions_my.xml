<?xml version="1.0" encoding="utf-8"?>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:background="#ffcfe2 ">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".fragments.ConditionsMyFragment">


            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
                    android:id="@+id/radioGroupLast" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/i_m_a_single_person" android:id="@+id/single_person_and_dont_hide_it"
                        android:checked="true" android:clickable="true"/>
                <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_are_a_couple" android:id="@+id/couple_but_its_ok" android:clickable="true"/>
            </RadioGroup>

            <Button
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/arrow_right_24_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/condishns_next_button" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="1.0" android:drawableRight="@drawable/arrow_right_24_icon"
                    app:layout_constraintTop_toBottomOf="@+id/optional_text_view"/>
            <TextView
                    android:text="@string/other_data_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/other_data_text_view" android:textSize="18sp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/radioGroupLast"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.027" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/have_house_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableRight="@drawable/home_filled_24"
                    android:id="@+id/have_house_im_lucky" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/other_data_text_view" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:visibility="visible" android:drawableEnd="@drawable/home_filled_24"
                    android:focusable="true"/>
            <TextView
                    android:text="@string/have_car_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/have_automobile_like_kalo" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/have_house_im_lucky" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:drawableRight="@drawable/car_24" android:drawableEnd="@drawable/car_24"
                    android:clickable="true" android:focusable="true"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/have_motorcycle_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/have_bike_like_biker" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/have_automobile_like_kalo" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                    android:drawableRight="@drawable/motorcycle_24" android:drawableEnd="@drawable/motorcycle_24"
                    android:checked="false"
                    android:clickable="true"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:enabled="true"
                    android:focusable="true" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/make_it_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/i_want_to_make_clear" android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/have_bike_like_biker"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:ems="10"
                    android:id="@+id/yes_again_make_clear" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/i_want_to_make_clear" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:maxLength="2000"
                    android:maxLines="8"
                    android:lines="6"/>
            <TextView
                    android:text="@string/optional_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/optional_text_view" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/yes_again_make_clear"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintVertical_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

