<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffcfe2 ">

        <ImageView
                android:src="@drawable/heart_back"
                android:layout_width="102dp"
                android:layout_height="96dp"
                android:id="@+id/iView12"
                android:rotation="15" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/preferneces_text_view" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.674" app:layout_constraintVertical_bias="0.111"
                app:layout_constraintTop_toBottomOf="@+id/iView13"/>
        <ImageView
                android:src="@drawable/heart_back"
                android:layout_width="102dp"
                android:layout_height="96dp"
                android:id="@+id/iView13"
                android:rotation="5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/preferneces_text_view" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.76"
                app:layout_constraintVertical_bias="0.061"/>
        <Button
                android:background="?attr/selectableItemBackground"
                android:drawableEnd="@drawable/arrow_right_24_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/last_reg_activity_wfsd_next_button"
                android:drawableRight="@drawable/arrow_right_24_icon"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/terms_and_conditions" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="@string/terms_and_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms_and_conditions"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/acccept_dfgfg_w_want"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.39" app:layout_constraintVertical_bias="0.0"
                android:textSize="16sp"/>
        <CheckBox
                android:text="@string/agreement_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acccept_dfgfg_w_want"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintVertical_bias="0.636" android:textSize="16sp"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/preferneces_text_view"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.632" app:layout_constraintVertical_bias="0.095"
                android:id="@+id/radioGroupLasPage">

            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/i_m_looking_for_time_to_time_meets" android:id="@+id/this_guy_looking_for_one_night_sped_smert"
                    android:checked="true" android:clickable="true" android:textSize="18sp"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/i_m_looking_for_serious_relationships" android:id="@+id/this_guy_lookin_vechnaya_lyubov" android:clickable="true"
                    android:textSize="18sp"/>
        </RadioGroup>
        <TextView
                android:text="@string/what_do_you_prefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preferneces_text_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.485" app:layout_constraintVertical_bias="0.357"
                android:textSize="22sp"/>

        <ImageView
                android:id="@+id/iView11"
                android:layout_width="79dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="72dp"
                android:rotation="-15"
                android:src="@drawable/heart_back"
                app:layout_constraintBottom_toTopOf="@+id/preferneces_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/iView16"
                android:layout_width="132dp"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:rotation="-20"
                android:src="@drawable/heart_back"
                app:layout_constraintBottom_toTopOf="@+id/acccept_dfgfg_w_want"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage"
                app:layout_constraintVertical_bias="1.0" />

        <ImageView
                android:id="@+id/iView17"
                android:layout_width="102dp"
                android:layout_height="95dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:rotation="15"
                android:src="@drawable/heart_back"
                app:layout_constraintBottom_toTopOf="@+id/terms_and_conditions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/iView16"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLasPage"
                app:layout_constraintVertical_bias="0.273" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>